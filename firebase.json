{
  "functions": {
    "postdeploy": [
      "curl https://us-central1-rzk-market-ua.cloudfunctions.net/bot"
    ]
  },
  "hosting": [ {
    "target": "rzk.com.ua",
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "app"
      }
    ]
  },
  {
    "target": "absemetov.org.ua",
    "public": "sites/absemetov.org.ua",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [ {
      "source": "**",
      "destination": "/index.html"
    } ]
  }
]
}