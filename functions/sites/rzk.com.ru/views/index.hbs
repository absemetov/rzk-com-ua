<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5 row-cols-xxl-6 g-2 mb-3">
  {{#each objects as |object|}}
    <div class="col">
      <div class="card text-center h-100">
        <a href="/o/{{object.id}}">
          <img src="{{object.imgUrl}}" class="card-img-top" alt="{{object.name}}">
        </a>
        <div class="card-body">
          <h5><a href="/o/{{object.id}}">{{object.name}}</a></h5>
          <p class="card-text">
            {{object.description}}
          </p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            {{object.address}}
            <a href="//t.me/RzkCrimeaBot?start=o_{{object.id}}_c_c" target="_blank" class="ps-1 text-decoration-none">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-telegram" viewBox="0 0 16 16">
                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.287 5.906c-.778.324-2.334.994-4.666 2.01-.378.15-.577.298-.595.442-.03.243.275.339.69.47l.175.055c.408.133.958.288 1.243.294.26.006.549-.1.868-.32 2.179-1.471 3.304-2.214 3.374-2.23.05-.012.12-.026.166.016.047.041.042.12.037.141-.03.129-1.227 1.241-1.846 1.817-.193.18-.33.307-.358.336a8.154 8.154 0 0 1-.188.186c-.38.366-.664.64.015 1.088.327.216.589.393.85.571.284.194.568.387.936.629.093.06.183.125.27.187.331.236.63.448.997.414.214-.02.435-.22.547-.82.265-1.417.786-4.486.906-5.751a1.426 1.426 0 0 0-.013-.315.337.337 0 0 0-.114-.217.526.526 0 0 0-.31-.093c-.3.005-.763.166-2.984 1.09z"></path>
              </svg>
            </a>
          </li>
          <li class="list-group-item">
            {{#each object.phoneArray as |phone|}}
              <a href="tel:{{phone}}" class="text-decoration-none">{{phone}}</a>
            {{/each}}
          </li>
          <li class="list-group-item">
            <a href="/o/{{object.id}}/c"  class="btn btn-primary">Каталог товаров</a>
          </li>
        </ul>
        <div class="card-footer">
          <a href="/o/{{object.id}}/cart"  class="btn btn-primary position-relative">
            Корзина {{object.cartInfo.totalSum}} {{../currencyName}}
            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
              {{object.cartInfo.cartCount}}
              <span class="visually-hidden">count goods</span>
            </span>
          </a>
        </div>
      </div>
    </div>
  {{/each}}
</div>
