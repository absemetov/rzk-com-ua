{{#if tags}}
  <div class="dropdown mb-3">
    <button class="btn btn-success dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
      Фильтр
      {{#each tags as |tag|}}
        {{#if tag.active}}[{{tag.text}}]{{/if}}
      {{/each}}
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
      {{#each tags as |tag|}}
        <li><a class="dropdown-item{{#if tag.active}} active{{/if}}" href="{{tag.url}}">{{tag.text}}</a></li>
      {{/each}}
      {{#each tags as |tag|}}
        {{#if tag.active}}
          <li><hr class="dropdown-divider"></li>
          <li><a class="dropdown-item" href="/o/{{../object.id}}/c/{{../currentCatalog.id}}">Все товары</a></li>
        {{/if}}
      {{/each}}
    </ul>
  </div>
{{/if}}
<div class="row row-cols-2 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5 row-cols-xxl-6 g-2 mb-3">
  {{#if catalogs}}
    {{#each catalogs as |catalog|}}
      <div class="col">
        <div class="card text-center h-100">
          <a href="{{catalog.url}}">
            <img src="{{catalog.imgUrl}}" class="card-img-top" alt="{{catalog.name}}">
          </a>
          <div class="card-body">
            <h6><a href="{{catalog.url}}">{{catalog.name}}</a></h6>
          </div>
        </div>
      </div>
    {{/each}}
  {{/if}}
  {{#if products}}
    {{#each products as |product|}}
      <div class="col">
        <div class="card text-center h-100">
          <a href="{{product.url}}">
            <img src="{{product.imgUrl}}" onerror="this.src = '/icons/cart3.svg';" class="card-img-top" alt="{{product.name}}">
          </a>
          <div class="card-body">
            <h6>
              <a href="{{product.url}}">{{product.name}}</a> <small class="text-muted">({{product.id}})</small>
              <a href="//t.me/RzkCrimeaBot?start=o_{{../object.id}}_p_{{product.id}}" target="_blank" class="ps-1 text-decoration-none">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-telegram" viewBox="0 0 16 16">
                  <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.287 5.906c-.778.324-2.334.994-4.666 2.01-.378.15-.577.298-.595.442-.03.243.275.339.69.47l.175.055c.408.133.958.288 1.243.294.26.006.549-.1.868-.32 2.179-1.471 3.304-2.214 3.374-2.23.05-.012.12-.026.166.016.047.041.042.12.037.141-.03.129-1.227 1.241-1.846 1.817-.193.18-.33.307-.358.336a8.154 8.154 0 0 1-.188.186c-.38.366-.664.64.015 1.088.327.216.589.393.85.571.284.194.568.387.936.629.093.06.183.125.27.187.331.236.63.448.997.414.214-.02.435-.22.547-.82.265-1.417.786-4.486.906-5.751a1.426 1.426 0 0 0-.013-.315.337.337 0 0 0-.114-.217.526.526 0 0 0-.31-.093c-.3.005-.763.166-2.984 1.09z"></path>
                </svg>
              </a>
            </h6>
          </div>
          <div class="card-footer">
            <h3>
              {{product.price}} <small class="text-muted">{{../currencyName}}</small>
            </h3>
            <div class="d-grid gap-2">
              <button type="button" class="btn {{#if product.qty}}btn-success{{else}}btn-primary{{/if}}" data-bs-toggle="modal" data-bs-target="#cartAddModal" data-bs-id="{{product.id}}" data-bs-name="{{product.name}}" data-bs-unit="{{product.unit}}" data-bs-qty="{{product.qty}}">
                {{#if product.qty}}{{product.qty}} {{product.unit}} {{product.sum}} {{../currencyName}}{{else}}Купить{{/if}}
              </button>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
    {{> modalAddToCart}}
  {{/if}}
</div>
{{#if prevNextLinks}}
  <nav aria-label="Page navigation example">
    <ul class="pagination pb-3">
      {{#each prevNextLinks as |prevNextLink|}}
        <li class="page-item"><a class="page-link" href="{{prevNextLink.url}}">{{prevNextLink.text}}</a></li>
      {{/each}}
    </ul>
  </nav>
{{/if}}
