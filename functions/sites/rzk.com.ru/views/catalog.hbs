<h1><a href="/o/{{object.id}}">{{object.name}}</a></h1>
<h1>{{object.phoneNumber}}</h1>
<h1>{{object.address}}</h1>
<h1>{{object.description}}</h1>
{{#if currentCatalog}}
  <h1>
    <a href="/o/{{object.id}}/c/{{currentCatalog.parentId}}">..</a> /
    <a href="/o/{{object.id}}/c/{{currentCatalog.id}}">{{currentCatalog.name}}</a>
  </h1>
{{/if}}
{{#if catalogs}}
  <ul>
  {{#each catalogs as |catalog|}}
    <li><a href="{{catalog.url}}">{{catalog.name}}</a></li>
  {{/each}}
  </ul>
{{/if}}
{{#if tags}}
  <ul>
  {{#each tags as |tag|}}
    <li><a href="{{tag.url}}">{{tag.text}}</a></li>
  {{/each}}
  </ul>
{{/if}}
{{#if products}}
  <ul>
  {{#each products as |product|}}
    <li>
      <a href="{{product.url}}">{{product.name}} {{product.price}} {{product.unit}} {{../currencyName}}</a>
      <!-- Button trigger modal -->
      <button type="button" class="btn {{#if product.qty}}btn-success{{else}}btn-primary{{/if}}" data-bs-toggle="modal" data-bs-target="#cartAddModal" data-bs-objectId="{{../object.id}}" data-bs-id="{{product.id}}" data-bs-name="{{product.name}}" data-bs-unit="{{product.unit}}" data-bs-qty="{{product.qty}}">
        {{#if product.qty}}{{product.qty}} {{product.unit}} {{product.sum}} {{../currencyName}}{{else}}Добавить товар{{/if}}
      </button>
    </li>
  {{/each}}
  </ul>
  {{> modalAddToCart}}
{{/if}}
{{#if prevNextLinks}}
  <ul>
  {{#each prevNextLinks as |prevNextLink|}}
    <li><a href="{{prevNextLink.url}}">{{prevNextLink.text}}</a></li>
  {{/each}}
  </ul>
{{/if}}
