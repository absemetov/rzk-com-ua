{
  "name": "rzk-market-ua",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint:js": "eslint --ext \".js,.vue\" --ignore-path .gitignore .",
    "lint": "yarn lint:js",
    "export-server": "rm -rf functions/.nuxt && mkdir -p functions/.nuxt/dist && cp -r .nuxt/dist/server functions/.nuxt/dist",
    "export-public": "rm -rf public && mkdir -p public/_nuxt && cp -r .nuxt/dist/client/. public/_nuxt && cp -r static/. public",
    "deploy-fire": "firebase deploy --only hosting:rzk.com.ua,functions:app",
    "deploy": "yarn export-server && yarn export-public && yarn deploy-fire",
    "pr": "firebase projects:list"
  },
  "dependencies": {
    "@nuxtjs/firebase": "^7.5.0",
    "core-js": "^3.9.1",
    "firebase": "^8.4.1",
    "nuxt": "^2.15.3"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config": "^6.0.0",
    "@nuxtjs/eslint-module": "^3.0.2",
    "@nuxtjs/vuetify": "^1.11.3",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.22.0",
    "eslint-plugin-nuxt": "^2.0.0",
    "eslint-plugin-vue": "^7.7.0"
  }
}
